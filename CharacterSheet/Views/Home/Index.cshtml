@{
    ViewData["Title"] = "Characters";
}

@model List<CharacterSheet.Models.Character>

<h2>Characters:</h2>

<form asp-action="Create" asp-controller="Home" class="form-inline mbm">
    <div class="form-group">
        <input class="form-control" name="CharacterName" />
        <input class="btn" type="submit" value="Add Character" />
    </div>
</form>

<h4>Characters:</h4>

<div>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <label>@item.Name</label>
            </li>
        }
    </ul>
</div>
